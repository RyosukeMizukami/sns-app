<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <%= gravatar_for @user %>
            <h1><%= @user.name %></h1>
            <span><%= link_to "view my profile", @user %></span>
            <span><b>Posts:</b> <%= @user.posts.count %></span>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @iines.any? %>
            <ul class="posts">
                <%= render @iines %>
            </ul>
            <%= will_paginate @iines %>
        <% end %>
    </div>
</div>